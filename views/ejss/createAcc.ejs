<body class="bodyBackground">

  <%- include('partials/header') %>


  <section id="accSection">

    <h2 id="accH2"><%= message %></h2>

  <main >
    <form id="accForm" action="/securelogin" method="POST">
      <input type="text" name="user" placeholder="User Name" required>
      <input type="password" name="password" placeholder="password" required>
      <div id="accCheckButton">
      <input id="accInput" type="checkbox" name="new" value="true">Make new Account</input>
      <button id="accButton" type="submit" >Submit</button>
      </div>
    </form>
  </main>

</section>

</body>

